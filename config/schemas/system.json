{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "System Configuration Schema",
  "description": "Schema for validating the system configuration",
  "type": "object",
  "properties": {
    "llm_config": {
      "type": "object",
      "properties": {
        "providers": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "api_base": { "type": "string" },
              "env_var": { "type": "string" },
              "default_model": { "type": "string" },
              "valid_models": { 
                "type": "array",
                "items": { "type": "string" }
              },
              "context_length": { "type": "integer" },
              "model_params": { "type": "object" },
              "litellm_params": { "type": "object" }
            },
            "required": ["api_base", "env_var", "default_model"]
          }
        },
        "default_provider": { "type": "string" },
        "default_model": { "type": "string" },
        "personas": { "type": "object" },
        "agents": { "type": "object" }
      },
      "required": ["providers", "default_provider"]
    },
    "orchestration": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "entry_team": { "type": "string" },
        "max_total_teams": { "type": "integer" },
        "max_recursion_depth": { "type": "integer" },
        "error_handling": { "type": "object" },
        "teams": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "max_recursion_depth": { "type": "integer" },
              "tasks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "agent_class": { "type": ["string", "null"] },
                    "agent_type": { "type": ["string", "null"] },
                    "persona_key": { "type": ["string", "null"] },
                    "requires_approval": { "type": "boolean" },
                    "max_retries": { "type": "integer" },
                    "config": { "type": "object" }
                  },
                  "required": ["name"]
                }
              },
              "routing": {
                "type": "object",
                "properties": {
                  "rules": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "condition": {
                          "oneOf": [
                            { "type": "string" },
                            { "type": "object" },
                            { 
                              "type": "array",
                              "items": { "type": "object" }
                            }
                          ]
                        },
                        "next_team": { "type": ["string", "null"] }
                      },
                      "required": ["condition", "next_team"]
                    }
                  },
                  "default": { "type": ["string", "null"] }
                }
              }
            },
            "required": ["name", "tasks"]
          }
        }
      },
      "required": ["enabled"]
    },
    "runtime": { "type": "object" },
    "backup": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "path": { "type": "string" }
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": { "type": "string", "enum": ["debug", "info", "warning", "error", "critical"] },
        "format": { "type": "string" },
        "agent_level": { "type": "string", "enum": ["debug", "info", "warning", "error", "critical"] },
        "providers": { "type": "object" },
        "truncate": {
          "type": "object",
          "properties": {
            "prefix_length": { "type": "integer" },
            "suffix_length": { "type": "integer" }
          }
        }
      }
    }
  }
}