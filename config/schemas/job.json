{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Job Configuration Schema",
  "description": "Schema for validating job/task configuration",
  "type": "object",
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "agent_type": { "type": "string" },
          "persona_key": { "type": "string" },
          "config": { "type": "object" }
        },
        "required": ["name"]
      }
    },
    "intent": { "type": "object" },
    "project": {
      "type": "object", 
      "properties": {
        "path": { "type": "string" }
      }
    }
  }
}